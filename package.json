{
  "name": "databot",
  "version": "1.0.0",
  "main": "electron-app/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "build": {
    "appId": "com.elitemhe.databot",
    "productName": "Data Bot",
    "asar": false,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "electron-app/**/*"
    ],
    "extraFiles": [
      {
        "from": "assets/logo.png",
        "to": "logo.png"
      },
      {
        "from": "electron-app/extractor.exe",
        "to": "extractor.exe"
      },
      {
        "from": "electron-app/Input_Data.xlsx",
        "to": "Input_Data.xlsx"
      }
    ],
    "win": {
      "target": "nsis"
    }
  }
}
